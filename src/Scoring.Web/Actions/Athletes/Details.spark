<viewdata model="Scoring.Web.Actions.Athletes.AthleteDetailsViewModel"/>

<div class="row">
<h2>${this.DisplayFor(a => a.Athlete.FirstName)} ${this.DisplayFor(a => a.Athlete.LastName)}</h2>
</div>
<br/>
<for each="var s in Model.Scores">
  <div class="row">
    <br/>
    ${s.Event.Name}:  ${s.Place} (<test if="s.ScoreType == ScoreType.Time">${this.DisplayFor(s, score => score.Time)}</test><test if="s.ScoreType == ScoreType.Reps">${s.Reps}</test>)
  </div>
</for>
